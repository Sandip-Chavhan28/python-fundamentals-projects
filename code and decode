import random 
import string

for i in range(1,11) :
 try :   
      a = int(input("1 for coding \n2 for decoding \n3 for quite \nEnter number which  want to function  : "))

 except :
        print("Enter a function number ")

 if not 0 < a < 4 :
         raise ValueError("Enter number 1 or 2 , not other ")


 if (a==1) :
     b = input("Enter a message : ")
     words = b.split() 
     newstr = []
     for word in words :
            if (len(word)<= 3) :
                n = word[ : : -1]
                newstr.append(n)
            else :  

                str =''.join(random.choices(string.ascii_lowercase, k=3)) + word[1 : ] + word[0]  + ''.join(random.choices(string.ascii_lowercase,k=3))
                newstr.append(str)

     print()
     print("Your decoded  message is : ",end = " ")            
     print(" ".join(newstr))
     print(" \n ")

 elif (a == 3)   :
          print("Thank you 游똂游낕游땕游똂游낕")
          break

 else :
      b = input("Enter a message : ")
      words = b.split()
      newstr = []
      for word in words :
            if (len(word)<=3) :
                n = word[ : : -1]
                newstr.append(n)

            else :
             c = word[len(word)-4] + word[3 : len(word)-4]    
             newstr.append(c)

      print()      
      print('Your code message is : ', end = " ")        
      print( " ".join(newstr))
      print()
      print("Thank you for reading a message")
      print()
